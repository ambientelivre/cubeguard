<?xml version="1.0" encoding="UTF-8"?>
<plugin title="cubeguard" loader="DEFAULT">
<overlays>
		<overlay id="startup.cubeguard" resourcebundle="content/cubeguard/resources/lang/messages">
			<menubar id="toolsmenu">
	        	<menuitem id="cubeguard" label="${Launcher.cubeguard}" command="mantleXulHandler.openUrl('${Launcher.cubeguard}','${Launcher.cubeguard_TOOLTIP}','plugin/cubeguard/api/default')"/>
	      	</menubar>
	    </overlay>
	</overlays>
	<lifecycle-listener class="pt.webdetails.cpk.CpkLifecycleListener"/>
	<static-paths>
		<static-path url="/cubeguard/static" localFolder="static"/>
		<static-path url="/cubeguard/resources" localFolder="resources"/>
		<static-path url="/cubeguard/app" localFolder="cubeguard"/>
	</static-paths>
	<content-types>
		<content-type>
			<title>Cubeguard</title>
			<description></description>
			<company name="" url="" logo="@PLUGIN_COMPANY_LOGO@"></company>
		</content-type>
	</content-types>
	<content-generator
		id="cubeguard"
		title="Cubeguard"
		type="cubeguard"
		class="pt.webdetails.cpk.CpkContentGenerator"/>
	<!-- Menu entry -->
	<menu-items>
		<!--<menu-item id="cubeguard_main" anchor="tools-submenu" label="Cubeguard" command="content/cubeguard/" type="MENU_ITEM" how="LAST_CHILD"/>-->
